<Window x:Class="SystemMonitorConfigurationTest.Dialogs.SelectParameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation ="CenterScreen"
        Title="SelectParameters" Height="350" Width="344">
    <Grid>
        <Label x:Name="Total" Content="Total: 0" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="Parameters" Margin="10,36,10,85" SelectionMode="Multiple"/>
        <CheckBox x:Name="SelectAll" Content="Select All" HorizontalAlignment="Left" Margin="10,0,0,50" VerticalAlignment="Bottom" Checked="Select_Checked" Unchecked="Select_Unchecked"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="75,00,0,10" VerticalAlignment="Bottom" Width="50" Click="Cancel_Click"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,75,10" VerticalAlignment="Bottom" Width="50" Click="Ok_Click"/>
    </Grid>
</Window>
