<Window x:Class="SystemMonitorConfigurationTest.Dialogs.PULFileSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation ="CenterScreen"
        Title="Set PUL File" Height="140" Width="370">
    <Grid>
        <Label x:Name="appsLabel" Content="App:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="appList" HorizontalAlignment="Left" Margin="65,15,0,0" VerticalAlignment="Top" Width="250" IsReadOnly="True"/>
        <Label Content="File:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="fileName" HorizontalAlignment="Left" Margin="65,45,0,0" Text="" VerticalAlignment="Top" Width="250" Height="20"/>
        <Button Content="..." HorizontalAlignment="Right" Margin="0,44,10,0" VerticalAlignment="Top" Width="25" Click="SelectFile_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="75,00,0,10" VerticalAlignment="Bottom" Width="50" Click="Cancel_Click"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,75,10" VerticalAlignment="Bottom" Width="50" Click="Ok_Click"/>
    </Grid>
</Window>
