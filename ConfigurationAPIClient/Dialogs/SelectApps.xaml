<Window x:Class="SystemMonitorConfigurationTest.Dialogs.SelectApps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitorConfigurationTest.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation ="CenterScreen"
        Title="Select Apps" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="appList" Margin="10,10,10,85" SelectionMode="Multiple"/>
        <CheckBox x:Name="force" Content="Force Reprogram" HorizontalAlignment="Left" Margin="10,0,0,50" VerticalAlignment="Bottom"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="75,00,0,10" VerticalAlignment="Bottom" Width="50" Click="Cancel_Click"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,75,10" VerticalAlignment="Bottom" Width="50" Click="Ok_Click"/>
    </Grid>
</Window>
