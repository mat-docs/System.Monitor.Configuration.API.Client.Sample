<Window x:Class="SystemMonitorConfigurationTest.Dialogs.SetSlot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation ="CenterScreen"
        Title="Set Slot" Height="110" Width="280">
    <Grid>
        <Label x:Name="slotTxt" Content="Slot:" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="slot" HorizontalAlignment="Left" Margin="65,10,0,0" VerticalAlignment="Top" Width="71"/>
        <CheckBox x:Name="activate" Content="Activate" HorizontalAlignment="Left" Margin="160,12,0,0" VerticalAlignment="Top"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="75,00,0,10" VerticalAlignment="Bottom" Width="50" Click="Cancel_Click"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,75,10" VerticalAlignment="Bottom" Width="50" Click="Ok_Click"/>
    </Grid>
</Window>
